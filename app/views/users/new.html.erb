<h2>Реєстрація</h2>

<%= form_with model: @user, class: "custom-form" do |f| %>
  <div class="row">
    <%= f.label "Логін", class: "form-label" %>
    <%= f.text_field :login, class: "form-control" %>
  </div>

  <div class="row">
    <%= f.label "Пароль", class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="row">
    <%= f.label "Підтвердження пароля", class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="row">
    <%= f.submit "Створити акаунт", class: "btn btn-success" %>
  </div>
<% end %>