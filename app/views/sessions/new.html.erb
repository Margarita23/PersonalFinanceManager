<h2>Увійти</h2>

<%= form_with url: login_path, class: "custom-form", local: true do |f| %>
  <div class="row">
    <%= f.label "Логін", class: "form-label" %>
    <%= f.text_field :login, class: "form-control" %>
  </div>

  <div class="row"> 
    <%= f.label "Пароль", class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="row">
    <%= f.submit "Увійти", class: "btn btn-success" %>
  </div>
<% end %>